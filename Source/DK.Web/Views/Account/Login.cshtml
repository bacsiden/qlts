@model DK.Web.Models.LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Quản lý tài sản";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/png">
    <title>@ViewBag.Title - @ViewBag.HeadTitle</title>
    <link href="~/Content/style.default.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <style>
        .field-validation-error, .validation-summary-errors {
            color: #e80c4d;
        }
    </style>
</head>
<body class="signin">
    <section>
        <div class="signinpanel">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="text-center mb10">
                        @*<img src="~/images/logo.png" style="width: 100%;" />*@
                    </div>
                    <form method="post" role="form" class="form-horizontal">
                        <h4 class="nomargin">Đăng nhập hệ thống</h4>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <input name="ReturnUrl" type="hidden" value="" />
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.UserName)

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <button type="submit" class="btn btn-success btn-block">Đăng nhập</button>
                    </form>
                </div><!-- col-sm-5 -->
            </div><!-- row -->

            <div class="signup-footer">
                <div class="pull-left">
                    &copy; 2020. @ViewBag.HeadTitle
                </div>
            </div>

        </div><!-- signin -->

    </section>

    <script src="@Url.Content("~/Scripts/dist/jquery.min.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        jQuery(document).ready(function () {
            $("#Email").focus();
        });
    </script>
</body>
</html>