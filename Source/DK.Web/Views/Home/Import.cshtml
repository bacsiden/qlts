@using DK.Web.Utilities
@using DK.Application.Models
@model DK.Web.Core.PagerViewModel
@{
    ViewBag.Title = "Import tài sản từ excel";
}

<div class="row mt-2">
    <div class="col-12">
        <div class="card shadow-base bd-0">
            @using (Html.BeginForm("Import", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal mt-3">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="file" name="taisan" id="taisan" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-upload"> </i> Import</button>
                            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

