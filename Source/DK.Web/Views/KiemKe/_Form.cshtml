@model DK.Application.Models.Type

@using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)
    <div class="row mb-2">
        <div class="col-md-6 search-item">
            @Html.TextBoxFor(m => m.Title, new { Class = "form-control" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="col search-item">
            <button class="btn bd bg-primary tx-white pointer" type="submit"><i class="ion-document-text"></i> Cập nhật</button>

            <div class="dropdown d-sm-inline-block pull-right">
                <a class="btn bd pointer" href="/KiemKe/Create" onclick="createKiemKe(this);"><i class="fa fa-plus"></i> Button1</a>
                <a class="btn bd pointer" href="/KiemKe/Create" onclick="createKiemKe(this);"><i class="fa fa-plus"></i> Button1</a>
                <a class="btn bd pointer" href="/KiemKe/Create" onclick="createKiemKe(this);"><i class="fa fa-plus"></i> Button1</a>

                <a class="dropdown-toggle btn btn-primary" href="javascript:void(0)" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-download"></i> Tải file
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                    @foreach (var item in DK.Application.Models.ReportVariables.Templates.Take(4))
                    {
                        <a class="dropdown-item report" href="javascript:void(0)" data-pattern="@item.Key">@item.Value.Item1 - @item.Key</a>
                    }
                </div>
            </div>
        </div>
    </div>
}
